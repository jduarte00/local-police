<div class="offset-sm-3">
  <div>
    <h2>Edita tu Información
  </div>
  <br>
<form id="form-container" action="/changeProfile" method="post" class="form-inlin justify-content-center">
  <div class="form-group row">
    <label for="username" class="col-3 col-form-label">Nombre de usuario</label>
    <div class="col-9">
      <input type="text" name="username" value="{{user.username}}" placeholder="Nombre de usuario" id="username">
    </div>
  </div>
  <div class="form-group row">
    <label for="password" class="col-3 col-form-label">Mail</label>
    <div class="col-9">
      <input type="text" name="mail" placeholder="Correo Electrónico" value="{{user.mail}}" id="mail">
    </div>
  </div>
  <br>
  <br>
  

  <div class="form-group row">
    <img class="img-edit"src="{{user.imgPath}}" alt="Profile Picture">
  </div>
  {{#if message}}
  <div class="error-message form-group row col-6 alert alert-success" role="alert"">
    {{message}}
  </div>
  {{/if}}
  <br>

  <a href="/changeImage"class="btn btn-primary"> Cambia tu imagen </a>
  <button class="btn btn-primary" type="submit" name="button">Cambia tu información</button>
 
</div>  
