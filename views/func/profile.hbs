<h2>Cambia tu información</h2>

<form id="form-container" action="/signup" method="post">
  <label for="username">Nombre de usuario</label>
  <input type="text" name="username" value="{{user.username}}" placeholder="Nombre de usuario" id="username">

  <br>
  <label for="password">Contraseña</label>
  <input type="password" name="password" placeholder="Contraseña" id="password">
  <br>
  <label for="password">Mail</label>
  <input type="text" name="mail" placeholder="Correo Electrónico" value="{{user.mail}}" id="mail">
  <br>
  <br>
  <img src="{{user.imgPath}}" alt="Profile Picture">
  {{#if message}}
  <div class="error-message">
    {{message}}
  </div>
  {{/if}}
  <br>
  <button type="submit" name="button">Cambia tu información</button>
  <br>
</form>