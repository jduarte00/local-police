
<div class="offset-sm-3">
  <div >
    <h2>Cambia tu información</h2>
  </div>
  <br>
  
  <form id="form-container" action="/signup" method="post" class="form-inlin justify-content-center">
    <div class="form-group row">
      <label for="username" class="col-3 col-form-label""col-3 col-form-label">Nombre de usuario</label>
      <div class="col-9">
       <input type="text" name="username" value="{{user.username}}" placeholder="Nombre de usuario" id="username">
      </div>
    </div>
  <div class="form-group row">
    <label for="password" class="col-3 col-form-label""col-3 col-form-label">Contraseña</label>
    <div class="col-9">
      <input type="password" name="password" placeholder="Contraseña" id="password">
    </div>
  </div>
 <div class="form-group row">
  <label for="password" class="col-3 col-form-label""col-3 col-form-label">Mail</label>
  <div class="col-9">
    <input type="text" name="mail" placeholder="Correo Electrónico" value="{{user.mail}}" id="mail">
  </div>
</div>
  <div class="form-group row">
    <img class="img-edit"src="{{user.imgPath}}" alt="Profile Picture">
  </div>
  {{#if message}}
  <div class="error-message">
    {{message}}
  </div>
  {{/if}}
  <br>
  <div class="form-group row col-7 btn-incident">
  <a href="/changeImage"class="btn btn-primary"> Cambia tu imagen </a>
  <button class="btn btn-primary" type="submit" name="button">Cambia tu información</button>
  </div>
  <br>
</form>
</div>