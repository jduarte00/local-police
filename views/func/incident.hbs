<div class="offset-sm-3">
  <div> 
    <h2>Generar Reporte</h2>
  </div>
  <br>
  <form action="/newIncident" method="post" class="form-inlin justify-content-center">
    <div class="form-group row">
      <label for="location" class="col-3 col-form-label" >Location</label>
        <div class="col-9">
          <input type="text" name="location" value="" placeholder="Ingresa la ubicación" required>
        </div>
    </div>

  <div class="form-group row">
    <label for="type" class="col-3 col-form-label">Tipo de Delito</label>
      <div class="col-9">
        <input type="text" name="type" value="" placeholder="Selecciona un delito"  required>
      </div>
  </div>
  <div class="form-group row">
    <label for="oficialNumber" class="col-3 col-form-label"  >Numero de Denuncia</label>
      <div class ="col-9">
        <input type="text" name="oficialNumber" value="" placeholder=" (opcional)">
      </div>
  </div>
  <div class="form-group row">
    <label for="date" class="col-3 col-form-label">Fecha de Delito</label>
        <div class ="col-9">
          <input type="datetime-local" name="date" value="" required>
       </div>
  </div>
  <div class="form-group row">
    <label for="additionalDetails" class="col-3 col-form-label">Descripción</label>
      <div class ="col-9">
        <textarea name="additionalDetails" id="" cols="30" rows="10" placeholder="Descripción" maxlength="1000" required></textarea>
      </div>
  </div>


  {{#if message}}
    <div class="error-message">
      {{message}}
    </div>
  {{/if}}
  <br>
  <div class="form-group row col-8 btn-incident">
    <input type="submit" value="Enviar Incidente" class="btn btn-success">
    <a href="/" class="btn btn-danger" >Cancelar</a>
   

  </div>
  
    
 

</form>
</div>